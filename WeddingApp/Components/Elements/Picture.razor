@using WeddingApp.Controllers
@using WeddingAppDTO.DataTransferObject


<MudPaper Class="d-flex align-center" Style="background-color: rgba(253,221,210,1)">
    <MudStack Spacing=0>
        <MudImage Src="@this.pictureEntity.PicturePath" ObjectFit="ObjectFit.ScaleDown" Elevation="25" Class="rounded-lg ma-4" Fluid="true" />
        @if (this.pictureEntity.UserID == this.CurrentUserID)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete" OnClick="@(()=>DeletePicture.InvokeAsync(this.pictureEntity.PicturePath))"/>
        }
    </MudStack>
</MudPaper>

@code {
    [Parameter]
    public WeddingAppDTO.DataTransferObject.Picture pictureEntity { get; set; }

    [Parameter]
    public int CurrentUserID { get; set; }

    [Parameter]
    public EventCallback<string> DeletePicture { get; set; }
}
